<%= form_for [@topic, @post, @post.comments.build] do |f| %>
  <h4> Add a Comment </h4>
  
  <%= f.label :body %>
  <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter comment body" %>

  
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>